@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MiParcialito.Models.Curso
@inject UserManager<IdentityUser<Int32>> UserManager

@{
    ViewData["Title"] = "Inscribir Curos";
    var user = await UserManager.GetUserAsync(User);
}

<h1>Cursos</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Inscribir">
            <input type="hidden" name="usuarioId" value="@UserManager.GetUserId(User)" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="IdDocenteNavigation.IdUsuarioNavigation.UserName" class="control-label"></label>
                    <span asp-validation-for="IdDocenteNavigation.IdUsuarioNavigation.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>